{
  "name": "family-budget-tracker",
  "version": "1.0.0",
  "description": "A modern, cross-platform family budget tracking application",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=1 electron .",
    "build-electron": "electron-builder",
    "build-android": "eas build --platform android",
    "build-ios": "eas build --platform ios",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "expo": "~50.0.0",
    "react": "18.2.0",
    "react-native": "0.73.0",
    "react-native-paper": "^5.11.0",
    "react-native-vector-icons": "^10.0.0",
    "@react-navigation/native": "^6.1.0",
    "@react-navigation/bottom-tabs": "^6.5.0",
    "@react-navigation/stack": "^6.3.0",
    "react-native-screens": "~3.29.0",
    "react-native-safe-area-context": "4.8.2",
    "expo-sqlite": "~13.0.0",
    "expo-file-system": "~16.0.0",
    "expo-sharing": "~12.0.0",
    "expo-document-picker": "~11.10.0",
    "react-native-chart-kit": "^6.12.0",
    "react-native-svg": "14.1.0",
    "date-fns": "^2.30.0",
    "react-hook-form": "^7.47.0",
    "@hookform/resolvers": "^3.3.0",
    "yup": "^1.3.0",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-reanimated": "~3.6.2",
    "expo-status-bar": "~1.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.45",
    "@types/react-native": "~0.73.0",
    "typescript": "^5.1.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "jest": "^29.2.1",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@expo/webpack-config": "^19.0.0"
  },
  "build": {
    "appId": "com.familybudget.tracker",
    "productName": "Family Budget Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/**/*",
      "electron.js"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": ["budget", "finance", "family", "expense-tracker", "react-native", "electron"],
  "author": "onepoint10",
  "license": "MIT"
}